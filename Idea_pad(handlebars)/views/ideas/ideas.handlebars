 <div class="mt-5">
   <div class="container">
     <div class="row">
{{#each ideas}}
 <div class="col-md-4 ">
  <div class="card card-body mb-3 box">
   <div class='ml-auto'>
     <div class="d-inline-block">
     <button class='btn btn-light text-info'><a href="/ideas/edit/{{id}}"><i class="fas fa-pencil-alt"></i></a></button>
     </div>
     <div class="d-inline-block">
   <form action='/ideas/{{id}}?_method=DELETE' method='POST'>
      <input type='hidden' name='_method' value='DELETE' >
       <button class='btn btn-light text-danger'><i class="far fa-trash-alt"></i></button>
   </form>

     </div>
   </div>
   <h1>{{title}}</h1>
   <h5>{{detail}}</h5>
  </div>
  </div>
{{else}}
 <h3>No Ideas listed</h3>
{{/each}}
  </div>
 </div>
</div>